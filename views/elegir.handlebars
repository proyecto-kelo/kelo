<html>
<head>
	<title>Elegir viñedo para modificar</title>
<meta http-equiv="Content-Type" content= "text/html; charset=utf-8" /> 
<link rel="shorcut icon" href="images/imagewine.png">
<meta name="viewport" content="width=device-width, user-scalable=no">
<!-----Including CSS for different screen sizes-->
<link rel="stylesheet" type="text/css" href="css-admin/responsiveform.css">
<link rel="stylesheet" media="screen and (max-width: 1200px) and (min-width: 601px)" href="css-admin/responsiveform1.css" />
<link rel="stylesheet" media="screen and (max-width: 600px) and (min-width: 351px)" href="css-admin/responsiveform2.css" />
<link rel="stylesheet" media="screen and (max-width: 350px)" href="css-admin/responsiveform3.css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="js-admin/admin.js" type="text/javascript"></script>
<script src="js-admin/main-admin.js" type="text/javascript"></script>
</head>
<body>
	<div id="envelope">
		<header>
			<img id="atras" src="ima-admin/back.png" width="60" height="60" onclick="location.href='/admin/princi.html'" style="cursor: pointer;"><h2>Elegir</h2>
		</header>
		<form id="formbuscar" method="post" action="/buscar">
			<label>Nombre Viñedo</label>
			<input id="nom" name="nom" placeholder="Ejemplo:Ochoa" type="text" width="100px;">
			<input type="submit" value="Buscar" id="buscar">
		</form>
	</div>
	<div id="formularios">
		<form id="formmodificar" method="post" action="/modificar" >
    		<label>Nombre Viñedo</label>
    		<input id="nombre" name="nombre" value="" type="text" width="100px;" readonly>
    		<label>Provincia</label>
    		<input id="provincia" name="provincia" value="" type="text" width="100px;" readonly>
   		 	<label>Dirección</label>
    		<input id="direccion" name="direccion" value="" type="text" readonly>
   			<label>Email</label>
    		<input id="gmail" name="gmail" value="" type="text" width="100px;" readonly>
    		<label>Telefono</label>
    		<input id="telf" name="telf" value="" type="text" width="100px;" readonly>
		    <label>Información Corta</label>
		    <input id="infor" name="infor" value="" type="text" readonly>
		    <label>Información Larga</label>
		    <textarea cols="15" id="informacion" name="informacion" value="" rows="3" readonly></textarea>
		    <label>Busqueda</label>
		    <input id="busqueda" name="busqueda" value="" type="text" width="100px;" readonly>
		    <label>Tinto</label>
		    <input id="tinto" name="tinto" value="" type="text" width="100px;" readonly>
		    <label>Blanco</label>
		    <input id="blanco" name="blanco" value="" type="text" width="100px;" readonly>
		    <label>Rosado</label>
		    <input id="rosado" name="rosado" value="" type="text" width="100px;" readonly>
		    <label>Imagen</label>
		    <input id="imagen" name="imagen" value="" type="text" width="100px;" readonly>
		    <br><br>
		    <input type="submit" value="Modificar" id="modificar" onclick="validarCampos()" disabled>
  		</form>
	</div>
</body>
</html>